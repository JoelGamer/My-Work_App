<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyWorkMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guitheodoro.gmail.com.myworkapp.MyWorkMain">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/fragPerfil"
            android:name="android.app.ListFragment"
            android:layout_width="391dp"
            android:layout_height="504dp"
            android:layout_marginBottom="484dp"
            android:layout_marginEnd="312dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/my_work_main_perfil" />

        <fragment
            android:id="@+id/fragCurr"
            android:name="android.app.ListFragment"
            android:layout_width="391dp"
            android:layout_height="504dp"
            android:layout_marginBottom="484dp"
            android:layout_marginEnd="312dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/my_work_main_curr" />

        <fragment
            android:id="@+id/fragChat"
            android:name="android.app.ListFragment"
            android:layout_width="391dp"
            android:layout_height="504dp"
            android:layout_marginBottom="484dp"
            android:layout_marginEnd="312dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/my_work_main_curr" />

        <fragment
            android:id="@+id/fragNotf"
            android:name="android.app.ListFragment"
            android:layout_width="391dp"
            android:layout_height="504dp"
            android:layout_marginBottom="484dp"
            android:layout_marginEnd="312dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/my_work_main_curr" />

        <fragment
            android:id="@+id/fragMain"
            android:name="android.app.ListFragment"
            android:layout_width="391dp"
            android:layout_height="504dp"
            android:layout_marginBottom="484dp"
            android:layout_marginEnd="312dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/my_work_main_main" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        app:itemIconTint="@drawable/bottom_nav_selector"
        app:itemTextColor="@drawable/bottom_nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/main_nav">

    </android.support.design.widget.BottomNavigationView>

    <ListView
        android:id="@+id/lstMain"
        android:layout_width="0dp"
        android:layout_height="504dp"
        android:layout_marginBottom="57dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>